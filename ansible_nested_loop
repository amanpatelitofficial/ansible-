---
- name: Copy files to remote hosts with nested loop
  hosts: all
  tasks:
    - name: Copy files to remote host
      copy:
        src: "{{ item.0.src }}"
        dest: "{{ item.1.dest }}"
      with_nested:
        - { '/etc/passwd' , '/etc/passwd' , '/etc/group' }
        - {'/home' , '/etc' , '/tmp' }
