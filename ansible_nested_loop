---
- name: Copy files to remote hosts with nested loop
  hosts: all
  tasks:
    - name: Copy files to remote host
      copy:
        src: "{{ item.0.src }}"
        dest: "{{ item.1.dest }}"
      with_nested:
        - - { src: /local/path/file1.txt, dest: /remote/path1/ }
          - { src: /local/path/file2.txt, dest: /remote/path2/ }
        - - { dest: /destination1/ }
          - { dest: /destination2/ }

